{
  "name": "token-transactions-api",
  "version": "1.0.0",
  "description": "Token Transactions API",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose --detectOpenHandles",
    "dev": "ts-node ./src/index.ts",
    "tdd": "jest --watchAll --verbose --detectOpenHandles",
    "prepare": "husky install",
    "commit": "npm run lint && npm run test && git add . && git-cz",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "docker:composeredis": "docker compose -f \"docker-compose-redis.yml\" up -d --build",
    "docker:stop": "docker-compose stop",
    "docker:restart": "docker compose -f \"docker-compose-redis.yml\" down && npm run docker:composeredis",
    "docker:clean": "docker system prune -a"
  },
  "author": "Jose Eduardo Almeida",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "fastify": "^4.26.2",
    "fastify-helmet": "^7.1.0",
    "openapi-types": "^12.1.3",
    "redis": "^4.6.13",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-module-resolver": "^1.5.0",
    "eslint-plugin-no-async-foreach": "^0.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
